<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_black"
    android:keepScreenOn="true"
    tools:context=".ui.academy.fragment.ProgrammeListFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_margin="@dimen/_12sdp"
        android:src="@drawable/ic_chevron_left_solid" />

    <TextView
        android:id="@+id/programmeNameTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_22sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/exo_regular"
        android:gravity="center"
        android:text="@string/instructor"
        android:textColor="@color/lb_tv_white"
        android:textSize="@dimen/_18ssp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subProgrammeRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/programmeNameTV"
        android:layout_marginTop="@dimen/_14sdp"
        tools:listitem="@layout/layout_subclass_list" />


</RelativeLayout>